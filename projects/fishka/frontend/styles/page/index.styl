body
    background-color #000

canvas
    position absolute
    top calc( 50% - 250px )
    left calc( 50% - 250px )
    box-shadow 10 0 2px #111
    border-radius 250px
    width 500px
    height 500px

p
    font 20px Helvetica
    color #eee
    position absolute
    width 500px
    text-align center
    top calc( 50% - 300px )
    left calc( 50% - 250px )